<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<div class="w3-container">
  <h1 class="w3-center w3-animate-zoom" id="brand">TRAVEL N' STYLE !</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card" style="width: 23rem;">
        <div class="card-header">SIGN UP</div>
        <!--<h2>Sign Up Form</h2>-->
        <div class="card-body">
          <h2 class="card-title"></h2>
          <form class="signup">
            <div class="form-group">
              <input type="firstname" class="form-control" id="firstname-input" placeholder="First Name">
              <input type="lastname" class="form-control" id="lastname-input" placeholder="Last Name">
              <input type="email" class="form-control" id="email-input" placeholder="Email Address">
              <input type="password" class="form-control" id="password-input" placeholder="Password">
              <div class="radioBtns">
                <p>Gender:</p>
                <div class="genderDiv gender"><input type="radio" name="gendered" value="male">Male</div>
                <div class="genderDiv"><input type="radio" name="gendered" value="female">Female</div>
              </div>
            </div>
            <button type="submit" class="btn btn-default">Sign Up</button>
          </form>
          <p>Or log in <a href="/login" id="login">here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
